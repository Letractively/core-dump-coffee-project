      <div class="span6 offset1">
      
      <table class="table table-striped table-bordered">
       <tr>
        <th>
          <%=(t 'form.signup.name')%>
        </th>
        <td>
          <%=@user.name%>
        </td>
       </tr>
       <tr>
        <th>
          <%=(t 'form.signup.email')%>
        </th>
        <td>
