<% provide(:title, "Your Order") %> 
<div class="span9" style="float:right">
  <h3 class="header-title">Your Order</h3>
  <div class="popover-content">
            <table class="table table-hover">
   <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Phone</th>
    <th>Date</th>
    <th>Total</th>
    <th></th>
  </tr>
  <% @order.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.phone %></td>
    <td><%= item.created_at.strftime("%H:%M %d-%m-%Y") %></td>
    <td><%= number_to_currency(item.total, :unit => "") %> YJP</td>
    <td><%= link_to "View Detail", :controller => "order", :action => "show", :id => item.id %></td>
  </tr>
  <% end %>
          </table>
  </div>
  <div style="clear:both;float:right"><%= will_paginate @order %></div>
</div>