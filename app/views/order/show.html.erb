 <% provide(:title, "Order Detail") %> 
 <div class="span9" style="float:right">
  <h3 class="header-title">Order Detail (Name: <%= @order.name %> - Date: <%= @order.created_at.strftime("%H:%M %d-%m-%Y") %>)</h3>
  <div class="popover-content">
    <% if @detail.empty? %>
    <p>Your Cart is empty.</p>
    <% end %>

    <% total = 0 %>
    <table class="table cart" id="yourcart">
      <tr>
        <th></th>
        <th>Item</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Total</th>
      </tr>

      <% @detail.each do | rec | %>
      <% item = Products.find_by_id(rec.product_id) %>
      <tr>
        <td>
          <div class="image">
            <%= link_to (image_tag item.imageurl), item %>
          </div>
        </td>
        <td><%= link_to item.name, item %></td>
        <td><%= number_to_currency(item.price, :unit => "") %> <%= item.currency %></td>
        <td><%= rec.qrt %><br /></td>
        <td><b>
          <%= number_to_currency(rec.qrt * item.price, :unit => "") %> YJP</b>
        </td>
      </tr>
      <% total += rec.qrt * item.price %>
      <% end %>

      <tr>
        <td colspan="4">
          <div class="total">Total:</div>
        </td>
        <td>
          <div class="price"><%= number_to_currency(total, :unit => "") %> YJP</div>
        </td>
      </tr>
    </table>
<%= link_to "Back", "/order",{:class => "btn"} %>
  </div>
  <div style="clear:both"></div>
</div>